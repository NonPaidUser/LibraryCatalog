{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}
    <a href="{{ path('app_home') }}">üè† Go to Home Page</a>

    <h1>{{ page_title }}</h1>

    <p>You are returning: <strong>{{ book.title }}</strong></p>

    {% for label, messages in app.flashes %}
        {% for msg in messages %}
            <div class="flash {{ label }}">{{ msg }}</div>
        {% endfor %}
    {% endfor %}

    <form method="post" action="{{ path('app_return', {id: book.id}) }}">
        <label for="username">Borrower Name</label><br>
        <input id="username" name="username" placeholder="Type exact user name" required>
        <button type="submit">Return</button>
    </form>

    <a href="{{ path('app_books') }}">‚¨Ö Back to catalog</a>
{% endblock %}
